% layout 'main';
<div id="container">
  <ul>
  % foreach (@{$postlist}) {
  <li class="postbox">
      <b><i class="postdate"><%= $_->{date} %></i></b><br />
      <b><a href="/post/<%= $_->{slug} %>">
          <%= $_->{topic} %>
      </a></b>
      </li>
  % }
</ul>
<div class="clearfix">&nbsp;</div>
</div>

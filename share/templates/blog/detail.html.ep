% use DateTime::Format::RFC3339;
% layout 'main';
<h2><%= $post->{topic} %></h2>

<div id="container" class="post-item">
%= t 'p' => begin
  % my $f = DateTime::Format::RFC3339->new;
  % my $dt = $f->parse_datetime($post->{created});
  Posted @ <%= $dt->strftime('%c') %>
  %= t 'br /'
  <strong>Tags</strong> :<%= join(', ', $post->{tags}) %>

%= end

 <%== $post->{html} %>

 <%= disqus_inc $config->{social}{disqus} || 'imnotset' %>

</div>

% layout 'auth';
%= t 'div', class => 'post-body' => begin
  %= include 'admin/nav'
  %= t 'h2' => 'Administer pages/posts'
  % if (my $msg = flash 'message') {
    <h4><%= $msg %></h4>
  % }
    %= tag 'ul' => begin
      % foreach (@{$postlist}) {
        %= tag 'li' => begin
          %= link_to "/admin/post/edit/$_->{slug}" => begin 
            <%= $_->{topic} %>
          %= end 
        %= end
      % }
    %= end
%= end
